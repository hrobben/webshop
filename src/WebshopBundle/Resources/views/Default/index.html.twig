{% extends '@Webshop/base.html.twig' %}

{% block title %}Webshop!{% endblock %}

{% block body %}
    <h1 class="page-header">Webshop !


        {% set cart = app.session.get('cart') %}
        {% set total = 0 %}
        {% set count = 0 %}

        {% if producten %}
            {% for key, item in cart %}
                {% for row in producten %}
                    {% if row.id == key %}
                        {% set total = total + (row.prijs * item)  %}
                        {% set count = count + item %}
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}

        <a href="{{ path('cart') }}"><button type="button" class="btn btn-info pull-right">Shopping Cart <span class="badge"> {{ count }} item(s)</span> â‚¬{{ total | number_format(2) }} </button></a>
    </h1>



    {{ name }}

    {{ body }}
{% endblock %}